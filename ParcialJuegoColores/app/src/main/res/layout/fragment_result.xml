<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:padding="24dp"
    tools:context=".ResultFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/resultado_titulo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:textAlignment="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Flow para organizar todos los elementos responsive -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flowResultados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="tvPuntajeFinal,tvPuntajeMaximo,tvHistorialTitulo,rvHistorial,btnVolver"
        app:flow_wrapMode="chain"
        app:flow_verticalStyle="packed"
        app:flow_horizontalStyle="spread"
        app:flow_verticalBias="0.3"
        app:flow_horizontalBias="0.5"
        app:flow_verticalGap="24dp"
        app:flow_maxElementsWrap="1"
        app:layout_constraintTop_toBottomOf="@id/tvTituloResultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Puntaje final con fondo programático -->
    <TextView
        android:id="@+id/tvPuntajeFinal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/puntaje_final_placeholder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/bg_puntaje"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Puntaje máximo con fondo programático -->
    <TextView
        android:id="@+id/tvPuntajeMaximo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/puntaje_maximo_placeholder"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/bg_tiempo"
        android:padding="12dp"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Título del historial -->
    <TextView
        android:id="@+id/tvHistorialTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/historial_titulo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.9" />

    <!-- RecyclerView para historial con dimensiones responsivas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:padding="8dp"
        android:elevation="2dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.4" />

    <!-- Botón volver responsivo -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:elevation="6dp"
        android:layout_marginTop="16dp"
        android:minHeight="60dp"
        app:layout_constraintWidth_percent="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>